<div class="flex flex-col w-full justify-center space-y-6">
    <%= link_to sanitize("&larr; Back"), @quote %>
    <h1 class="text-3xl font-bold">
        New Item for <%= l(@line_item_date.date, format: :long)%>
    </h1>
    <%= turbo_frame_tag nested_dom_id(@line_item_date,LineItem.new) do%>
        <%= render "form", quote: @quote,line_item_date: @line_item_date, line_item: @line_item %>
    <%end%>
</div>
