<%= simple_form_for [quote, line_item_date, line_item], do |f| %>

    <%=form_error_notification(line_item)%>
    <%= f.input :name%>
    <%= f.input :quantity%>
    <%= f.input :unit_price%>
    <%= f.input :description%>
    <div>
        <%= link_to "Cancel", quote_path(quote), class: "border px-4 py-2 rounded-lg bg-red-300"%>
        <%= f.submit, class: "border px-4 py-2 rounded-lg bg-green-300"%>
    </div>
<%end%>